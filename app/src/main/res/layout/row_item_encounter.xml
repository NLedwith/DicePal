<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/encounterParticipantNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="NPC Name"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/hpEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/hpEditText"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/expandableLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/encounterExpandableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/encounterParticipantNameTextView">

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/imageButton9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton30"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton31"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/imageButton17"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton19"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton32"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                        <ImageButton
                            android:id="@+id/imageButton33"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".1429"
                            app:srcCompat="@drawable/ic_encounter" />

                    </TableRow>

                </TableLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>