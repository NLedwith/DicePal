<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/encounterParticipantNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="NPC Name"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/hpEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/encounterExpandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/encounterParticipantNameTextView">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/blinded" />

                    <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/charmed" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/deafened" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/frightened" />

                    <ImageButton
                        android:id="@+id/imageButton8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/grappled" />

                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/incapacitated" />

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/invisible" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/paralyzed" />

                    <ImageButton
                        android:id="@+id/imageButton12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/petrified" />

                    <ImageButton
                        android:id="@+id/imageButton13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/poisoned" />

                    <ImageButton
                        android:id="@+id/imageButton14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/prone" />

                    <ImageButton
                        android:id="@+id/imageButton15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/restrained" />

                    <ImageButton
                        android:id="@+id/imageButton16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/stunned" />

                    <ImageButton
                        android:id="@+id/imageButton17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1429"
                        android:adjustViewBounds="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/unconscious" />
                </TableRow>

            </TableLayout>

            <EditText
                android:id="@+id/hpEditText"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>