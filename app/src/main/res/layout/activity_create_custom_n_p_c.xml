                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:text="Unconscious"
                    android:textColor="#000000"
