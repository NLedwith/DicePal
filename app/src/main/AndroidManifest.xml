<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.ttrpgtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.encounters.EncounterActivity"></activity>
        <activity
            android:name=".ui.parties.EditPartyActivity"
            android:label="@string/edit_party_title" />
        <activity
            android:name=".ui.parties.CreatePartyActivity"
            android:label="@string/create_party_title" />
        <activity
            android:name=".ui.npcs.EditCustomNPCActivity"
            android:label="@string/edit_custom_npc_title" />
        <activity
            android:name=".ui.npcs.CreateCustomNPCActivity"
            android:label="@string/create_custom_npc_title" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_new_user_title"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.rolldice.RollDiceActivity"
            android:label="@string/roll_dice_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.encounters.EnterInitiativeActivity"
            android:label="@string/enter_initiative_title" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>